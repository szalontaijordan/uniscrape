{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es3",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "include": [
        "app.ts",
        "src/**/*"
    ]
}